@model Exam2.Models.Class1
@{
    ViewBag.Title = "AddUpdate";
}

<h2>AddUpdate</h2>
<style>
    .error {
        color: #ff0000
    }
</style>

<h2>AddEmp</h2>

@using (Html.BeginForm("AddUpdate", "Home", FormMethod.Post))
{
    <!--@Html.TextBoxFor(m=>m.Id)-->
    @Html.HiddenFor(m => m.Id)

    <div class="form-group form-control">
        <label>Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-group form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "error" })
    </div>
    <div class="form-group form-control">
        <label>Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-group form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
       
    </div>
    <div class="form-group form-control">
        <label>Mobile</label>
        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-group form-control" })
        @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "error" })
    </div>
    <div class="form-group form-control">
        <label>Address</label>
        @Html.TextBoxFor(m => m.Address, new { @class = "form-group form-control" })
        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "error" })
    </div>
    <div class="form-group form-control">
        <label>Gender</label>
        @Html.TextBoxFor(m => m.Gender, new { @class = "form-group form-control" })
        @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "error" })
    </div> 
    <div class="form-group form-control">
        <label>Zipcode</label>
        @Html.TextBoxFor(m => m.Zipcode, new { @class = "form-group form-control" })
        @Html.ValidationMessageFor(m => m.Zipcode, "", new { @class = "error" })
    </div>
    <div class="form-group form-control">
        <label>Salary</label>
        @Html.TextBoxFor(m => m.Salary, new { @class = "form-group form-control" })
        @Html.ValidationMessageFor(m => m.Salary, "", new { @class = "error" })
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Add Emp</button>
    <button type="reset" class="btn btn-secondary">Re-set</button>
}

